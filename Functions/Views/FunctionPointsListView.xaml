<UserControl x:Class="Functions.Views.FunctionPointsListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:Functions.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance local:FunctionPointsListViewModel}"
             xmlns:cm="http://www.caliburnproject.org">
    <Grid Margin="10">
        <i:Interaction.Triggers>
            <i:KeyTrigger Modifiers="Control" Key="C">
                <cm:ActionMessage MethodName="CopyToClipboard" />
            </i:KeyTrigger>
            <i:KeyTrigger Modifiers="Control" Key="V">
                <cm:ActionMessage MethodName="PasteFromClipboard" />
            </i:KeyTrigger>
        </i:Interaction.Triggers>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button cm:Message.Attach="CreateNewPoint"
                    ToolTip="Доабвить новую точку"
                    HorizontalAlignment="Center"
                    Margin="10"
                    Width="25"
                    Height="25">
                <Button.Content>
                    <Rectangle Fill="{StaticResource AddItem}" Width="20" Height="20"/>
                </Button.Content>
            </Button>
            <Button cm:Message.Attach="CopyToClipboard"
                    ToolTip="Скопировать данные (ctrl + c)"
                    Margin="10"
                    Width="25"
                    Height="25">
                <Button.Content>
                    <Rectangle Fill="{StaticResource CopyToClipboard}" Width="20" Height="20"/>
                </Button.Content>
            </Button>
            <Button cm:Message.Attach="PasteFromClipboard"
                    ToolTip="Вставить данные (ctrl + v)"
                    Margin="10"
                     Width="25"
                    Height="25">
                <Button.Content>
                    <Rectangle Fill="{StaticResource PasteFromClipboard}" Width="20" Height="20"/>
                </Button.Content>
            </Button>
            <Button cm:Message.Attach="RemoveAllPoints"
                    ToolTip="Очистить все точки"
                    Margin="10"
                    Width="25"
                    Height="25">
                <Button.Content>
                    <Rectangle Fill="{StaticResource Clear}" Width="20" Height="20"/>
                </Button.Content>
            </Button>
            <Button cm:Message.Attach="SaveToFile"
                    ToolTip="Сохранить в файл"
                    Margin="10"
                    Width="25"
                    Height="25">
                <Button.Content>
                    <Rectangle Fill="{StaticResource GetFromFile}" Width="20" Height="20"/>
                </Button.Content>
            </Button>
            <Button cm:Message.Attach="GetFromFile"
                    ToolTip="Сохранить в файл"
                    Margin="10"
                    Width="25"
                    Height="25">
                <Button.Content>
                    <Rectangle Fill="{StaticResource SaveToFile}" Width="20" Height="20"/>
                </Button.Content>
            </Button>
        </StackPanel>
        <UniformGrid Grid.Row="1"
                     Margin="5"
                     Height="25">
            <TextBlock Text="Абсолютная отметка [мм]"
                       TextWrapping="Wrap"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
            <TextBlock Text="Температура [°C]"
                       Margin="10,0,0,0"
                       TextWrapping="Wrap"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </UniformGrid>
        <Border Grid.Row="2"
                Padding="5"
                BorderThickness="1"
                BorderBrush="LightGray">
            <ScrollViewer HorizontalScrollBarVisibility="Hidden"
                          VerticalScrollBarVisibility="Auto"
                          Padding="0,0,10,5">
                <ItemsControl ItemsSource="{Binding FunctionPoints}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Text="{Binding X, UpdateSourceTrigger=PropertyChanged}"
                                         Height="25"
                                         VerticalContentAlignment="Center"
                                         Grid.Column="0"
                                         Margin="3"/>
                                <TextBox Text="{Binding Y, UpdateSourceTrigger=PropertyChanged}"
                                         Height="25"
                                         VerticalContentAlignment="Center"
                                         Grid.Column="1"
                                         Margin="3"/>
                                <Button  Width="25"
                                         Height="25"
                                         Grid.Column="2"
                                         cm:Action.TargetWithoutContext="{Binding DataContext, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                         cm:Message.Attach="RemovePoint($dataContext)">
                                    <Button.Content>
                                        <Path Data="M0,0 L1,1 M0,1 L1,0" 
                                              Stroke="Black"
                                              StrokeThickness="1"
                                              Stretch="Uniform"
                                              Width="8" Height="8"/>
                                    </Button.Content>
                                </Button>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
        <CheckBox Grid.Row="3"
                    Content="Инвертировать функцию"
                    Margin="10"
                    Height="20"
                    IsChecked="{Binding IsInvertedFunctionDisplayed}"
                    IsEnabled="{Binding CanBeInverted}" />
    </Grid>
</UserControl>

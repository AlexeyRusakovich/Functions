<Window x:Class="Functions.Views.FunctionsDashboardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wpf="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:views="clr-namespace:Functions.Views"
        xmlns:vms="clr-namespace:Functions.ViewModels"
        xmlns:cm="http://www.caliburnproject.org"
        d:DataContext="{d:DesignInstance vms:FunctionsDashboardViewModel}"
        mc:Ignorable="d"
        Title="Functions"
        MinHeight="700"
        MinWidth="1200">
    
    <Grid>
        <i:Interaction.Triggers>
            <i:KeyTrigger Modifiers="Control" Key="C">
                <cm:ActionMessage MethodName="CopyToClipboard" />
            </i:KeyTrigger>
            <i:KeyTrigger Modifiers="Control" Key="V">
                <cm:ActionMessage MethodName="PasteFromClipboard" />
            </i:KeyTrigger>
        </i:Interaction.Triggers>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <DockPanel Grid.Column="0">
            <StackPanel DockPanel.Dock="Top"
                        Orientation="Horizontal">
                <Button cm:Message.Attach="AddNewItem"
                        ToolTip="Доабвить новый элемент"
                        HorizontalAlignment="Center"
                        Background="White"
                        Margin="10"
                        Width="25"
                        Height="25">
                    <Button.Content>
                        <Rectangle Fill="{StaticResource AddItem}" Width="20" Height="20"/>
                    </Button.Content>
                </Button>
                <Button cm:Message.Attach="CopyToClipboard"
                        ToolTip="Скопировать данные (ctrl + c)"
                        Margin="10"
                        Background="White"
                        Width="25"
                        Height="25">
                    <Button.Content>
                        <Rectangle Fill="{StaticResource CopyToClipboard}" Width="20" Height="20"/>
                    </Button.Content>
                </Button>
                <Button cm:Message.Attach="PasteFromClipboard"
                        ToolTip="Вставить данные (ctrl + v)"
                        Margin="10"
                        Background="White"
                        Width="25"
                        Height="25">
                    <Button.Content>
                        <Rectangle Fill="{StaticResource PasteFromClipboard}" Width="20" Height="20"/>
                    </Button.Content>
                </Button>
                <Button cm:Message.Attach="RemoveItems"
                        ToolTip="Очистить элементы"
                        Margin="10"
                        Background="White"
                        Width="25"
                        Height="25">
                    <Button.Content>
                        <Rectangle Fill="{StaticResource Clear}" Width="20" Height="20"/>
                    </Button.Content>
                </Button>
                <Button cm:Message.Attach="SaveToFile"
                        ToolTip="Экспорт в файл"
                        Background="White"
                        Margin="10"
                        Width="25"
                        Height="25">
                    <Button.Content>
                        <Rectangle Fill="{StaticResource GetFromFile}" Width="20" Height="20"/>
                    </Button.Content>
                </Button>
                <Button cm:Message.Attach="GetFromFile"
                        ToolTip="Импорт из файла"
                        Margin="10"
                        Background="White"
                        Width="25"
                        Height="25">
                    <Button.Content>
                        <Rectangle Fill="{StaticResource SaveToFile}" Width="20" Height="20"/>
                    </Button.Content>
                </Button>
            </StackPanel>
            <StackPanel DockPanel.Dock="Top"
                        Orientation="Vertical"
                        d:Visibility="Visible"
                        Margin="0,0,0,10">
                <TextBlock Text="Список функций: "
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"
                           FontSize="16"/>
                <ItemsControl ItemsSource="{Binding SelectedFunctionTables}"
                              Margin="10">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.Style>
                            <Style TargetType="ItemsControl">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedFunctionTables.Count}" Value="0">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ItemsControl.Style>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="0,0,10,0">
                                    <TextBlock Text="{Binding Function.Name}"/>
                                    <Button Margin="5,0,0,0"
                                            cm:Message.Attach="UnselectFunctionTable($dataContext)"
                                            cm:Action.TargetWithoutContext="{Binding DataContext, RelativeSource={RelativeSource AncestorType=ItemsControl}}">
                                        <Button.Content>
                                            <Path Data="M0,0 L1,1 M0,1 L1,0" 
                                                  Stroke="Black"
                                                  StrokeThickness="1"
                                                  Stretch="Uniform"
                                                  Width="7" Height="7"/>
                                        </Button.Content>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
            </StackPanel>
            <ListBox ItemsSource="{Binding FunctionsTables}"
                     ScrollViewer.CanContentScroll="False">
                <ListBox.Resources>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <Border Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="Transparent"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="Transparent"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListBox.Resources>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Expander IsExpanded="True">
                            <Expander.HeaderTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBox Text="{Binding DataContext.Function.Name,
                                                                RelativeSource={RelativeSource AncestorType=ListBoxItem},
                                                                UpdateSourceTrigger=PropertyChanged}"
                                                 Width="100"
                                                 FontSize="14"/>
                                        <CheckBox VerticalAlignment="Center"
                                                  IsChecked="{Binding DataContext.IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}"
                                                  Margin="10,0,0,0">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="Checked">
                                                    <cm:ActionMessage MethodName="OnFunctionTablesSelectionChanged">
                                                        <cm:Parameter Value="{Binding DataContext, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" />
                                                        <cm:Parameter Value="True" />
                                                    </cm:ActionMessage>
                                                </i:EventTrigger>
                                                <i:EventTrigger EventName="Unchecked">
                                                    <cm:ActionMessage MethodName="OnFunctionTablesSelectionChanged">
                                                        <cm:Parameter Value="{Binding DataContext, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" />
                                                        <cm:Parameter Value="False" />
                                                    </cm:ActionMessage>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </CheckBox>
                                    </StackPanel>
                                </DataTemplate>
                            </Expander.HeaderTemplate>
                            <views:FunctionTableView DataContext="{Binding}"/>
                        </Expander>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </DockPanel>
        <GridSplitter Grid.Column="1" Width="1" Background="LightGray"/>
        <ContentControl Grid.Column="2" Content="{Binding PlotControl, Mode=OneTime}"/>
    </Grid>
</Window>

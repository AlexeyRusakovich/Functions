<UserControl x:Class="Functions.Views.FunctionTableView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:Functions.Converters"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:Functions.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance local:FunctionTableViewModel}"
             xmlns:cm="http://www.caliburnproject.org">
    <UserControl.Resources>
        <converters:StringToDoubleConverter x:Key="StringToDoubleConverter"/>
    </UserControl.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <UniformGrid Grid.Row="1"
                     Margin="5,0,0,0">
            <TextBlock Text="Абсолютная отметка [мм]"
                       Height="15"
                       TextWrapping="Wrap"/>
            <TextBlock Text="Температура [°C]"
                       Height="15"
                       Margin="10,0,0,0"
                       TextWrapping="Wrap"/>
        </UniformGrid>
        <Border Grid.Row="2"
                MaxHeight="400">
            <ScrollViewer HorizontalScrollBarVisibility="Hidden"
                          VerticalScrollBarVisibility="Auto"
                          Padding="0,0,10,5">
                <ItemsControl ItemsSource="{Binding Function.Points}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Text="{Binding X, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource StringToDoubleConverter}}"
                                         Height="25"
                                         VerticalContentAlignment="Center"
                                         Grid.Column="0"
                                         Margin="3"/>
                                <TextBox Text="{Binding Y, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource StringToDoubleConverter}}"
                                         Height="25"
                                         VerticalContentAlignment="Center"
                                         Grid.Column="1"
                                         Margin="3"/>
                                <Button  Width="25"
                                         Height="25"
                                         Grid.Column="2"
                                         cm:Action.TargetWithoutContext="{Binding DataContext, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                         cm:Message.Attach="RemovePoint($dataContext)">
                                    <Button.Content>
                                        <Path Data="M0,0 L1,1 M0,1 L1,0" 
                                              Stroke="Black"
                                              StrokeThickness="1"
                                              Stretch="Uniform"
                                              Width="8" Height="8"/>
                                    </Button.Content>
                                </Button>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
        <CheckBox Grid.Row="3"
                  Content="Инвертировать функцию"
                  Margin="10"
                  Height="20"
                  IsChecked="{Binding IsInvertFunctionSelected}"
                  d:Visibility="Visible">
            <CheckBox.Style>
                <Style TargetType="CheckBox">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding CanBeInverted}" Value="True">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </CheckBox.Style>
        </CheckBox>
    </Grid>
</UserControl>
